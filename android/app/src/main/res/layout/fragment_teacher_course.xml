<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.teacher.courses.TeacherCourseFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- appbar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingHorizontal="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/mb_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_arrow_back"
                app:backgroundTint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </com.google.android.material.button.MaterialButton>

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- appbar ends -->

        <!-- search bar -->
        <EditText
            android:hint="@string/search_bar_hint"
            android:textColorHint="@color/grey_500"
            android:paddingHorizontal="16dp"
            android:drawableLeft="@drawable/ic_search"
            android:background="@drawable/background_edittext"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="44dp">

        </EditText>
        <!-- search bar ends -->

        <!-- all students -->
        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="@string/title_all_student"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_all_student"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
        <!-- all students ends -->

        <!-- student status -->
        <TextView
            android:id="@+id/textView7"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_student_status"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_courses">

        </TextView>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pc_studentStatus"
            android:layout_marginTop="8dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7">

        </com.github.mikephil.charting.charts.PieChart>
        <!-- student status ends -->

        <!-- task -->
        <TextView
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="@string/title_task"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_task"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>
        <!-- task ends -->

        <!-- delete button -->
        <Button
            android:id="@+id/mb_delete_course"
            android:text="@string/title_delete_course"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:backgroundTint="@color/teacher_main_color"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

        </Button>
        <!--<com.google.android.material.button.MaterialButton
            android:id="@+id/mb_delete"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/montserrat_bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/title_delete"
            android:textAllCaps="false"
            android:textColor="@color/teacher_main_color"
            android:textSize="18sp"/> -->
        <!-- delete button -->

    </LinearLayout>

</ScrollView>