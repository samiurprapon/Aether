    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/drawer_layout" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".views.teacher.TeacherHomeActivity">

    <!-- app bar -->
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="48dp">

        <ImageButton android:id="@+id/ib_menu" android:layout_width="42dp" android:layout_height="42dp" android:layout_marginStart="16dp" android:background="@android:color/transparent" android:src="@drawable/ic_menu" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">

