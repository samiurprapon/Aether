{
	"compileOnSave": true,
	"compilerOptions": {
		"composite": true,
		"incremental": true,
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"es2015",
			"es5",
			"es6",
			"dom",
			"ES2021"
		],
		"types": [
			"node",
			"express",
			"jest"
		],
		"moduleResolution": "node",
		"module": "CommonJS",
		"skipLibCheck": true,
		/* Bundler mode */
		"outDir": "./dist",
		"rootDir": ".",
		"sourceMap": false,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"removeComments": true,
		/* Linting */
		"strict": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		/* Other */
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
			"~/certs": [
				"certs/*"
			]
		},
		// typeorm
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"strictPropertyInitialization": false
	},
	"ts-node": {
		"require": [
			"tsconfig-paths/register"
		],
		"compilerOptions": {
			"module": "commonjs"
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.json",
		".env",
		"package.json"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}